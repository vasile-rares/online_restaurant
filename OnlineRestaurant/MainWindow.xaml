<Window x:Class="OnlineRestaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineRestaurant"
        xmlns:views="clr-namespace:OnlineRestaurant.Views"
        xmlns:viewmodels="clr-namespace:OnlineRestaurant.ViewModels"
        xmlns:converters="clr-namespace:OnlineRestaurant.Converters"
        mc:Ignorable="d"
        Title="Online Restaurant - Menu" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:OrderStatusToColorConverter x:Key="OrderStatusToColorConverter" />
        <converters:OrderStatusToStringConverter x:Key="OrderStatusToStringConverter" />
        <DataTemplate DataType="{x:Type viewmodels:MenuRestaurantViewModel}">
            <views:MenuRestaurantView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RegisterViewModel}">
            <views:RegisterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:UserProfileViewModel}">
            <views:UserProfileView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ShoppingCartViewModel}">
            <views:ShoppingCartView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:OrdersViewModel}">
            <views:OrdersView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#443000" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Papa's Restaurant"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center" />

                    <Button Content="Menu"
                            Command="{Binding NavigateToMenuCommand}"
                            Margin="20,0,0,0"
                            Padding="10,5"
                            Background="#C16F00"
                            Foreground="White"
                            BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <!-- User -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding UserViewModel.DisplayName}"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0" />

                    <!-- Cart button - visible when user is logged in and has items -->
                    <Button Padding="10,5"
                            Margin="0,0,10,0"
                            Background="#E67E22"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding NavigateToCartCommand}"
                            Visibility="{Binding UserViewModel.IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛒" FontSize="14" Margin="0,0,5,0" />
                            <TextBlock Text="{Binding ShoppingCart.ItemCount, StringFormat='Coș ({0})'}" />
                        </StackPanel>
                    </Button>

                    <!-- Orders button - visible only when user is logged in -->
                    <Button Content="Comenzile mele"
                            Command="{Binding NavigateToOrdersCommand}"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            Visibility="{Binding UserViewModel.IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Profile button - visible only when user is logged in -->
                    <Button Content="Profile"
                            Command="{Binding NavigateToProfileCommand}"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Background="#2ECC71"
                            Foreground="White"
                            BorderThickness="0"
                            Visibility="{Binding UserViewModel.IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Login button - visible only when user is NOT logged in -->
                    <Button Content="Login"
                            Command="{Binding NavigateToLoginCommand}"
                            Padding="10,5"
                            Background="#775B00"
                            Foreground="White"
                            BorderThickness="0"
                            Visibility="{Binding UserViewModel.IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>