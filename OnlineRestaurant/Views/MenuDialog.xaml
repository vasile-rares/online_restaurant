<Window x:Class="OnlineRestaurant.Views.MenuDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineRestaurant.Views"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="300" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding DialogTitle}" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,15" />

        <!-- Menu Form Fields -->
        <StackPanel Grid.Row="1">
            <!-- Menu Name Input -->
            <TextBlock Text="Menu Name:" Style="{StaticResource LabelStyle}" />
            <TextBox x:Name="txtMenuName" 
                     Text="{Binding Menu.Name, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource InputFieldStyle}" />

            <!-- Category Selection -->
            <TextBlock Text="Category:" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="cmbCategory" 
                      ItemsSource="{Binding Categories}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="IdCategory"
                      SelectedValue="{Binding Menu.IdCategory}"
                      Padding="8" 
                      Margin="0,0,0,15" />
                      
            <!-- Note about dishes -->
            <TextBlock Text="Note: Dishes can be added to this menu after saving." 
                       Foreground="#666666"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0" />
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button x:Name="btnCancel" 
                    Content="Cancel" 
                    IsCancel="True"
                    Background="#9E9E9E"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="BtnCancel_Click" />
            <Button x:Name="btnSave" 
                    Content="Save" 
                    IsDefault="True"
                    Background="#4CAF50"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="BtnSave_Click" />
        </StackPanel>
    </Grid>
</Window> 