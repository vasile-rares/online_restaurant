<UserControl
    x:Class="OnlineRestaurant.Views.OrdersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OnlineRestaurant.Views"
    xmlns:converters="clr-namespace:OnlineRestaurant.Converters"
    xmlns:models="clr-namespace:OnlineRestaurant.Models"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    Background="#F5F5F5"
    RenderOptions.EdgeMode="Aliased"
    x:Name="OrdersUserControl">

    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:OrderStatusToColorConverter x:Key="OrderStatusToColorConverter" />
        <converters:OrderStatusToStringConverter x:Key="OrderStatusToStringConverter" />
        <converters:OrderStatusToVisibilityConverter x:Key="OrderStatusToVisibilityConverter" />
        <converters:IdTruncateConverter x:Key="IdTruncateConverter" />

        <Style x:Key="CancelOrderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="25,15" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <StackPanel>
                <TextBlock Text="Istoricul comenzilor"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Foreground="#333333" />

                <TextBlock Text="{Binding StatusMessage}"
                          Foreground="#27AE60"
                          Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"
                          Margin="0,5,0,0"
                          FontSize="14" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="0" Padding="20">
            <ItemsControl ItemsSource="{Binding Orders}" Margin="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,20"
                                Background="White"
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0"
                                ClipToBounds="True"
                                SnapsToDevicePixels="True">
                            <DockPanel>
                                <!-- Header -->
                                <Border Background="#FAFAFA"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="#E0E0E0"
                                        CornerRadius="8,8,0,0"
                                        Padding="20,15"
                                        DockPanel.Dock="Top">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock FontWeight="SemiBold" FontSize="16">
                                                <Run Text="Comandă #" />
                                                <Run Text="{Binding IdOrder, Converter={StaticResource IdTruncateConverter}}" />
                                            </TextBlock>
                                            <TextBlock Margin="10,0,0,0" Foreground="#757575" VerticalAlignment="Center">
                                                <Run Text="•" />
                                                <Run Text="{Binding OrderDate, StringFormat='{}{0:dd MMMM yyyy, HH:mm}'}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <Border Grid.Column="1"
                                                Background="{Binding Status, Converter={StaticResource OrderStatusToColorConverter}}"
                                                CornerRadius="4"
                                                Padding="10,5">
                                            <TextBlock Text="{Binding Status, Converter={StaticResource OrderStatusToStringConverter}}"
                                                     Foreground="White"
                                                     FontWeight="SemiBold" />
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Total -->
                                <Border Background="#FAFAFA"
                                        BorderThickness="0,1,0,0"
                                        BorderBrush="#E0E0E0"
                                        CornerRadius="0,0,8,8"
                                        Padding="20,15"
                                        SnapsToDevicePixels="True"
                                        UseLayoutRounding="True"
                                        DockPanel.Dock="Bottom">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                 Text="Total comandă"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 Foreground="#424242"
                                                 VerticalAlignment="Center" />

                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding TotalAmount, StringFormat='{}{0:0.00} Lei'}"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center" />
                                    </Grid>
                                </Border>

                                <!-- Products -->
                                <StackPanel Margin="20,15,20,15">
                                    <TextBlock Text="Produse comandate"
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,10"
                                             Foreground="#424242" />

                                    <ItemsControl ItemsSource="{Binding OrderDishes}" Margin="0,5,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,5,0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0"
                                                            Background="#F0F0F0"
                                                            CornerRadius="4"
                                                            Width="30"
                                                            Height="30">
                                                        <TextBlock Text="{Binding Quantity}"
                                                                 VerticalAlignment="Center"
                                                                 HorizontalAlignment="Center"
                                                                 FontWeight="SemiBold"
                                                                 Foreground="#424242" />
                                                    </Border>

                                                    <TextBlock Grid.Column="1"
                                                             Text="{Binding Dish.Name}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,0,0,0"
                                                             TextTrimming="CharacterEllipsis" />

                                                    <TextBlock Grid.Column="2"
                                                             Text="{Binding Dish.Price, StringFormat='{}{0:0.00} Lei'}"
                                                             VerticalAlignment="Center"
                                                             FontWeight="SemiBold"
                                                             Foreground="#424242" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Buton de anulare comandă - vizibil doar pentru comenzile care pot fi anulate -->
                                    <Button Content="Anulează comanda"
                                            Command="{Binding ElementName=OrdersUserControl, Path=DataContext.CancelOrderCommand}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource CancelOrderButtonStyle}"
                                            Visibility="{Binding Status, Converter={StaticResource OrderStatusToVisibilityConverter}}" />
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" Padding="20,15" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reîmprospătează"
                        Command="{Binding RefreshCommand}"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4" />
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Înapoi"
                        Command="{Binding BackCommand}"
                        Padding="20,10"
                        Background="#757575"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 