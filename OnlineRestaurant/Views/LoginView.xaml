<UserControl x:Class="OnlineRestaurant.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OnlineRestaurant.Views"
             xmlns:vm="clr-namespace:OnlineRestaurant.ViewModels"
             xmlns:converters="clr-namespace:OnlineRestaurant.Converters"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800"
             Background="#F5F5F5"
             RenderOptions.EdgeMode="Aliased">

    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="25,15" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <TextBlock Text="Autentificare"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#333333" />
        </Border>

        <!-- Formular de login -->
        <Grid Grid.Row="1">
            <Border Background="White" 
                    Width="400" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0">
                
                <StackPanel Margin="0,0,0,0">
                    <!-- Form header -->
                    <Border Background="#FAFAFA" 
                            BorderThickness="0,0,0,1" 
                            BorderBrush="#E0E0E0" 
                            Padding="25,15"
                            CornerRadius="8,8,0,0">
                        <TextBlock Text="Introduceți datele de autentificare" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#424242"/>
                    </Border>
                    
                    <!-- Form content -->
                    <StackPanel Margin="25,20">
                        <!-- Email -->
                        <TextBlock Text="Email:"
                                   Margin="0,0,0,8"
                                   Foreground="#757575"
                                   FontWeight="SemiBold" />
                        <Border Background="#F5F5F5"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0"
                                CornerRadius="4"
                                Margin="0,0,0,15">
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"
                                     Background="Transparent"
                                     BorderThickness="0" />
                        </Border>

                        <!-- Parolă -->
                        <TextBlock Text="Parolă:"
                                   Margin="0,0,0,8"
                                   Foreground="#757575"
                                   FontWeight="SemiBold" />
                        <Border Background="#F5F5F5"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0"
                                CornerRadius="4"
                                Margin="0,0,0,15">
                            <PasswordBox x:Name="PasswordBox"
                                         Padding="12,10"
                                         Background="Transparent"
                                         BorderThickness="0" />
                        </Border>

                        <!-- Mesaj eroare -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#E53935"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"
                                   FontWeight="SemiBold"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

                        <!-- Remember Me -->
                        <CheckBox Content="Ține-mă minte" 
                                  IsChecked="{Binding RememberMe}"
                                  Margin="0,0,0,20"
                                  Foreground="#757575" />
                    </StackPanel>
                    
                    <!-- Form footer with buttons -->
                    <Border Background="#FAFAFA" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="#E0E0E0" 
                            Padding="25,15"
                            CornerRadius="0,0,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="Creeaza cont nou"
                                    Command="{Binding CreateAccountCommand}"
                                    Padding="15,10"
                                    HorizontalAlignment="Left"
                                    Background="#757575"
                                    Foreground="White"
                                    BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4" />
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Grid.Column="1"
                                    Content="Autentificare"
                                    Command="{Binding LoginCommand}"
                                    Padding="20,10"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl> 