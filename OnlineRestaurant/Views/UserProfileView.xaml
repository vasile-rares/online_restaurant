<UserControl x:Class="OnlineRestaurant.Views.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineRestaurant.Views"
             xmlns:vm="clr-namespace:OnlineRestaurant.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Titlu -->
        <TextBlock Text="Profilul meu" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,20,0,20" 
                   HorizontalAlignment="Center"
                   Foreground="#2C3E50"/>
        
        <!-- Detalii profil -->
        <StackPanel Grid.Row="1" 
                    Width="400" 
                    Margin="0,10,0,0" 
                    HorizontalAlignment="Center">
            
            <!-- Nume și Prenume -->
            <Border Background="#F8F9FA" Padding="15" Margin="0,0,0,10" CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Nume complet:" 
                               Foreground="#34495E" 
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" 
                               Foreground="#34495E">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="Nume" />
                                <Binding Path="Prenume" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>
            </Border>
            
            <!-- Email -->
            <Border Background="#F8F9FA" Padding="15" Margin="0,0,0,10" CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email:" 
                               Foreground="#34495E" 
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding Email}" 
                               Foreground="#34495E"/>
                </Grid>
            </Border>
            
            <!-- Telefon -->
            <Border Background="#F8F9FA" Padding="15" Margin="0,0,0,10" CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Telefon:" 
                               Foreground="#34495E" 
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding Telefon}" 
                               Foreground="#34495E"/>
                </Grid>
            </Border>
            
            <!-- Adresa de livrare -->
            <Border Background="#F8F9FA" Padding="15" Margin="0,0,0,10" CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Adresă livrare:" 
                               Foreground="#34495E" 
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding AdresaLivrare}" 
                               Foreground="#34495E"
                               TextWrapping="Wrap"/>
                </Grid>
            </Border>
            
            <!-- Rol -->
            <Border Background="#F8F9FA" Padding="15" Margin="0,0,0,10" CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tip cont:" 
                               Foreground="#34495E" 
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding Rol}" 
                               Foreground="#34495E"/>
                </Grid>
            </Border>
        </StackPanel>
        
        <!-- Buton de ieșire -->
        <Button Grid.Row="2" 
                Content="Ieșire din cont" 
                Command="{Binding LogoutCommand}" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,30" 
                Padding="15,8" 
                Background="#E74C3C" 
                Foreground="White" 
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl> 