<UserControl x:Class="OnlineRestaurant.Views.ShoppingCartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineRestaurant.Views"
             xmlns:converters="clr-namespace:OnlineRestaurant.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:DefaultImageConverter x:Key="DefaultImageConverter" DefaultImagePath="/Images/default.jpg" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringVisibilityConverter" />
        <converters:BooleanInverterConverter x:Key="BooleanInverterConverter" />
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Coșul meu de cumpărături" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50"/>
                
                <Button Grid.Column="1" 
                        Content="Golește coșul" 
                        Command="{Binding ClearCartCommand}"
                        Padding="10,5" 
                        Background="#E74C3C" 
                        Foreground="White" 
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
            
            <!-- Message display -->
            <TextBlock Grid.Row="1"
                       Text="{Binding Message}" 
                       Visibility="{Binding Message, Converter={StaticResource StringVisibilityConverter}}"
                       Foreground="#27AE60"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"/>
        </Grid>
        
        <!-- Cart Items -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDDDDD" 
                                BorderThickness="0,0,0,1" 
                                Padding="10" 
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Product Image -->
                                <Border Width="80" 
                                        Height="80" 
                                        Background="#F5F5F5" 
                                        CornerRadius="5" 
                                        Margin="0,0,15,0">
                                    <Image Source="{Binding ImageUrl, Converter={StaticResource DefaultImageConverter}}" 
                                           Stretch="UniformToFill"
                                           ToolTip="{Binding ImageUrl}"/>
                                </Border>
                                
                                <!-- Product Info -->
                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold" 
                                               FontSize="16" 
                                               Foreground="#2C3E50"/>
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0:F2} lei/buc'}" 
                                               FontSize="14" 
                                               Foreground="#7F8C8D" 
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <!-- Quantity Controls -->
                                <StackPanel Grid.Column="2" 
                                            Orientation="Horizontal" 
                                            VerticalAlignment="Center" 
                                            Margin="0,0,15,0">
                                    <Button Command="{Binding DecreaseQuantityCommand}" 
                                            Width="30" Height="30" 
                                            Content="-" 
                                            FontWeight="Bold" 
                                            Background="#ECF0F1" 
                                            BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    
                                    <Border Width="40" Height="30" 
                                            Background="White" 
                                            BorderBrush="#BDC3C7" 
                                            BorderThickness="1" 
                                            Margin="5,0" 
                                            CornerRadius="4">
                                        <TextBlock Text="{Binding Quantity}" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    
                                    <Button Command="{Binding IncreaseQuantityCommand}" 
                                            Width="30" Height="30" 
                                            Content="+" 
                                            FontWeight="Bold" 
                                            Background="#ECF0F1" 
                                            BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                                
                                <!-- Price and Remove Button -->
                                <StackPanel Grid.Column="3" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:F2} lei'}" 
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               Foreground="#16A085" 
                                               HorizontalAlignment="Right" 
                                               Margin="0,0,0,10"/>
                                    
                                    <Button Command="{Binding RemoveCommand}" 
                                            Content="Șterge" 
                                            HorizontalAlignment="Right" 
                                            Padding="10,3" 
                                            Background="#E74C3C" 
                                            Foreground="White" 
                                            BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Empty Cart Message -->
        <TextBlock Grid.Row="1" 
                   Text="Coșul tău este gol" 
                   FontSize="18" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="#7F8C8D" 
                   Visibility="{Binding HasItems, Converter={StaticResource BooleanInverterConverter}}"/>
        
        <!-- Footer with Total -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Total comandă:" 
                           FontSize="16" 
                           Foreground="#7F8C8D"/>
                <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:F2} lei'}" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"/>
            </StackPanel>
            
            <Button Grid.Column="1" 
                    Content="Finalizează Comanda" 
                    Command="{Binding CheckoutCommand}" 
                    Padding="15,10" 
                    Background="#27AE60" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="16">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</UserControl> 