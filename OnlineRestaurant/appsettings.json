{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=RestaurantDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "OrderDiscounts": {
    "ValueThreshold": 80.0,
    "OrderCountThreshold": 3,
    "TimeIntervalDays": 3,
    "DiscountPercentage": 10.0,
    "FreeShippingThreshold": 50.0,
    "ShippingCost": 10.0,
    "LowStockThreshold": 15,
    "MenuDiscountPercentage": 15.0
  }
}
